@page "/"

@inject IJSRuntime JSRuntime;

<div id="designer-id" style="width: 100%; height: 100%;"></div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initDesigner");
        }
    }

}